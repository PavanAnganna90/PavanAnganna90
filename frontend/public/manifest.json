  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/contact?email=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import-logs",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".log", ".txt"],
        "application/x-yaml": [".yml", ".yaml"]
      }
    }
  ],
  "handle_links": "preferred",
  "prefer_related_applications": false
}