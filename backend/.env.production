# =============================================================================
# OpsSight Platform - Production Environment Configuration
# =============================================================================
# This file contains production-specific environment variables
# Make sure to update all placeholder values with your actual production values

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL Production Database
DATABASE_URL=postgresql://opssight_prod:REPLACE_WITH_SECURE_PASSWORD@your-db-host:5432/opssight_prod
DB_HOST=your-db-host
DB_PORT=5432
DB_USER=opssight_prod
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
DB_NAME=opssight_prod

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Configuration
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=REPLACE_WITH_SECURE_ENCRYPTION_KEY_32_CHARS

# Session Configuration
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_MIN_32_CHARS

# =============================================================================
# API Configuration
# =============================================================================
# CORS Origins (Production domains)
CORS_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# External Service Configuration
# =============================================================================
# Email Service (SendGrid/SES/etc.)
SMTP_HOST=smtp.your-email-service.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=REPLACE_WITH_SMTP_PASSWORD
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=OpsSight Platform

# Monitoring & Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9090

# =============================================================================
# Cloud Provider Configuration
# =============================================================================
# AWS Configuration (if using AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
# SSL Certificate paths (if using file-based certificates)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# =============================================================================
# Application Specific Settings
# =============================================================================
# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/uploads

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# Performance Configuration
# =============================================================================
# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# Security Headers
# =============================================================================
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
