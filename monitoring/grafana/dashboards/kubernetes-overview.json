{
  "dashboard": {
    "id": null,
    "title": "Kubernetes Cluster Overview",
    "tags": ["kubernetes", "infrastructure", "cluster"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Cluster CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "percent",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Cluster Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 * (1 - ((avg(node_memory_MemAvailable_bytes) or avg(node_memory_MemFree_bytes)) / avg(node_memory_MemTotal_bytes)))",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "percent",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Node Status",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(up{job=\"kubernetes-nodes\"})",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "colorBackground": false,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Running Pods",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{phase=\"Running\"})",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "colorBackground": false,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Failed Pods",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{phase=\"Failed\"})",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "thresholds": "0,1",
        "colorBackground": true,
        "colors": ["#299c46", "#e24d42", "#d44a3a"],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Pending Pods",
        "type": "singlestat",
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{phase=\"Pending\"})",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "thresholds": "0,5",
        "colorBackground": true,
        "colors": ["#299c46", "#e24d42", "#d44a3a"],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Pod CPU Usage by Namespace",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\"}[5m])) by (namespace)",
            "legendFormat": "{{namespace}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU cores",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 8,
        "title": "Pod Memory Usage by Namespace",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{container!=\"POD\",container!=\"\"}) by (namespace) / 1024 / 1024",
            "legendFormat": "{{namespace}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "MB",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 9,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (instance)",
            "legendFormat": "Receive {{instance}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (instance)",
            "legendFormat": "Transmit {{instance}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "bytes/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 10,
        "title": "Disk I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(node_disk_read_bytes_total[5m]))",
            "legendFormat": "Read",
            "refId": "A"
          },
          {
            "expr": "sum(rate(node_disk_written_bytes_total[5m]))",
            "legendFormat": "Write",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "bytes/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      }
    ]
  }
} 