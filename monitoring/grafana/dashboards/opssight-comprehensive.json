{
  "dashboard": {
    "id": null,
    "title": "OpsSight Platform - Comprehensive Monitoring",
    "tags": ["opssight", "platform", "monitoring", "comprehensive"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 2,
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"opssight-backend\"}",
            "legendFormat": "Backend Status",
            "refId": "A"
          },
          {
            "expr": "up{job=\"opssight-frontend\"}",
            "legendFormat": "Frontend Status", 
            "refId": "B"
          },
          {
            "expr": "up{job=\"postgresql\"}",
            "legendFormat": "Database Status",
            "refId": "C"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Cache Status",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green", 
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"opssight-backend\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "requests/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"opssight-backend\"}[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"opssight-backend\"}[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "seconds",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"opssight-backend\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"opssight-backend\"}[5m])",
            "legendFormat": "5xx Error Rate",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"opssight-backend\",status=~\"4..\"}[5m]) / rate(http_requests_total{job=\"opssight-backend\"}[5m])",
            "legendFormat": "4xx Error Rate",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "error rate",
            "min": 0,
            "max": 1
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "db_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "db_connections_idle",
            "legendFormat": "Idle Connections",
            "refId": "B"
          },
          {
            "expr": "db_connections_max",
            "legendFormat": "Max Connections",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "connections",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 6,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "system_cpu_usage_percent",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "system_memory_usage_percent",
            "legendFormat": "Memory Usage %",
            "refId": "B"
          },
          {
            "expr": "system_disk_usage_percent",
            "legendFormat": "Disk Usage %",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "percentage",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 7,
        "title": "Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "cache_hit_ratio",
            "legendFormat": "{{cache_type}} Hit Ratio",
            "refId": "A"
          },
          {
            "expr": "rate(cache_operations_total{result=\"hit\"}[5m])",
            "legendFormat": "{{cache_type}} Hits/sec",
            "refId": "B"
          },
          {
            "expr": "rate(cache_operations_total{result=\"miss\"}[5m])",
            "legendFormat": "{{cache_type}} Misses/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "ratio / rate",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 8,
        "title": "Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_events_total[5m])",
            "legendFormat": "{{event_type}} - {{severity}}",
            "refId": "A"
          },
          {
            "expr": "rate(security_auth_attempts_total{result=\"failed\"}[5m])",
            "legendFormat": "Failed Auth Attempts",
            "refId": "B"
          },
          {
            "expr": "security_blocked_ips_count",
            "legendFormat": "Blocked IPs",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "events/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 9,
        "title": "Background Tasks",
        "type": "graph",
        "targets": [
          {
            "expr": "background_tasks_active",
            "legendFormat": "{{task_type}} Active",
            "refId": "A"
          },
          {
            "expr": "rate(background_task_errors_total[5m])",
            "legendFormat": "{{task_type}} Errors/sec",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(background_task_duration_seconds_bucket[5m]))",
            "legendFormat": "{{task_type}} 95th Duration",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "tasks / seconds",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 28
        }
      },
      {
        "id": 10,
        "title": "Business Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "business_active_users",
            "legendFormat": "Active Users ({{time_window}})",
            "refId": "A"
          },
          {
            "expr": "business_user_sessions_active",
            "legendFormat": "Active Sessions",
            "refId": "B"
          },
          {
            "expr": "rate(business_pipeline_executions_total[5m])",
            "legendFormat": "Pipeline Executions/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "count / rate",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 36
        }
      },
      {
        "id": 11,
        "title": "Integration Health",
        "type": "graph", 
        "targets": [
          {
            "expr": "rate(business_integration_calls_total{status=\"success\"}[5m])",
            "legendFormat": "{{service}} Success Rate",
            "refId": "A"
          },
          {
            "expr": "rate(business_integration_calls_total{status=\"error\"}[5m])",
            "legendFormat": "{{service}} Error Rate", 
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(business_integration_latency_seconds_bucket[5m]))",
            "legendFormat": "{{service}} 95th Latency",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "rate / latency",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 36
        }
      },
      {
        "id": 12,
        "title": "Log Processing",
        "type": "table",
        "targets": [
          {
            "expr": "increase(logs_processed_total[1h])",
            "legendFormat": "Logs Processed (1h)",
            "refId": "A",
            "instant": true
          },
          {
            "expr": "increase(logs_forwarded_total[1h])",
            "legendFormat": "Logs Forwarded (1h)",
            "refId": "B",
            "instant": true
          },
          {
            "expr": "increase(logs_filtered_total[1h])",
            "legendFormat": "Logs Filtered (1h)",
            "refId": "C",
            "instant": true
          },
          {
            "expr": "increase(logs_errors_total[1h])",
            "legendFormat": "Log Errors (1h)",
            "refId": "D",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 44
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(process_start_time_seconds{job=\"opssight-backend\"}[1h])",
          "iconColor": "green",
          "title": "Backend Deployment"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(environment)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        },
        {
          "name": "service",
          "type": "query", 
          "query": "label_values(service)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}