{
  "dashboard": {
    "id": null,
    "title": "OpsSight Application Dashboard",
    "tags": ["opsight", "application", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"opsight-backend\"}[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"opsight-backend\"}[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "seconds",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"opsight-backend\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "requests/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"opsight-backend\",status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"opsight-backend\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "errors/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Backend Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"opsight-backend\"} / 1024 / 1024",
            "legendFormat": "RSS Memory (MB)",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "MB",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "database_connections_active{job=\"opsight-backend\"}",
            "legendFormat": "Active connections",
            "refId": "A"
          },
          {
            "expr": "database_connections_idle{job=\"opsight-backend\"}",
            "legendFormat": "Idle connections",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "connections",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "GitHub API Rate Limit",
        "type": "singlestat",
        "targets": [
          {
            "expr": "github_api_rate_limit_remaining{job=\"opsight-backend\"}",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "thresholds": "1000,500",
        "colorBackground": true,
        "colors": ["#d44a3a", "#e24d42", "#299c46"],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Pipeline Queue Size",
        "type": "singlestat",
        "targets": [
          {
            "expr": "pipeline_queue_size{job=\"opsight-backend\"}",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "thresholds": "50,100",
        "colorBackground": true,
        "colors": ["#299c46", "#e24d42", "#d44a3a"],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "WebSocket Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "websocket_connections_active{job=\"opsight-backend\"}",
            "legendFormat": "Active WebSocket connections",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "connections",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 9,
        "title": "Frontend Status",
        "type": "singlestat",
        "targets": [
          {
            "expr": "up{job=\"opsight-frontend\"}",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "valueMaps": [
          {
            "value": "0",
            "text": "DOWN"
          },
          {
            "value": "1",
            "text": "UP"
          }
        ],
        "thresholds": "0.5,0.5",
        "colorBackground": true,
        "colors": ["#d44a3a", "#299c46", "#299c46"],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 10,
        "title": "Backend Status",
        "type": "singlestat",
        "targets": [
          {
            "expr": "up{job=\"opsight-backend\"}",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "short",
        "valueMaps": [
          {
            "value": "0",
            "text": "DOWN"
          },
          {
            "value": "1",
            "text": "UP"
          }
        ],
        "thresholds": "0.5,0.5",
        "colorBackground": true,
        "colors": ["#d44a3a", "#299c46", "#299c46"],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 20
        }
      }
    ]
  }
} 